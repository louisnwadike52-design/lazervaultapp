                    SizedBox(width: 14.w),
                    Expanded(
                      child: Column(
                        crossAxisAlignment: CrossAxisAlignment.start,
                        children: [
                          Text(
                            result.recipientName,
                            style: GoogleFonts.inter(
                              color: Colors.white,
                              fontSize: 15.sp,
                              fontWeight: FontWeight.w700,
                            ),
                          ),
                          SizedBox(height: 2.h),
                          Text(
                            result.recipientAccount,
                            style: GoogleFonts.inter(
                              color: Colors.grey[400],
                              fontSize: 13.sp,
                              fontWeight: FontWeight.w500,
