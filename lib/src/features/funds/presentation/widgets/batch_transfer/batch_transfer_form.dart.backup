  void _removeRecipient(int index) {
    setState(() {
      _selectedRecipients[index].dispose();
      _selectedRecipients.removeAt(index);
      _calculateTotal();
    });
  }

  void _toggleRecipientExpansion(int index) {
    setState(() {
      _selectedRecipients[index].isExpanded = !_selectedRecipients[index].isExpanded;
    });
  }

  bool get _canProceed {
    if (_selectedRecipients.isEmpty || !_selectedRecipients.every((r) => r.isValid)) {
      return false;
    }

    // Check if account is selected
    if (_selectedAccount == null) {
      return false;
    }

    // Check if total amount exceeds balance
    if (_totalAmount > _selectedAccount!.balance) {
      return false;
    }

    return true;
  }

  bool get _hasInsufficientBalance {
    if (_selectedAccount == null || _selectedRecipients.isEmpty) {
      return false;
    }
    return _totalAmount > _selectedAccount!.balance;
  }

  double get _availableBalance {
    return _selectedAccount?.balance ?? 0.0;
  }

  double get _requiredBalance {
    return _totalAmount - _availableBalance;
  }

  void _proceedToBatchTransfer() async {
    if (!_canProceed) {
      if (_selectedAccount == null) {
        Get.snackbar(
          'Error',
          'Please select an account',
          backgroundColor: Colors.red[600],
          colorText: Colors.white,
        );
      } else if (_totalAmount > _selectedAccount!.balance) {
        Get.snackbar(
          'Insufficient Balance',
          'Total amount (£${_totalAmount.toStringAsFixed(2)}) exceeds available balance (£${_selectedAccount!.balance.toStringAsFixed(2)})',
          backgroundColor: Colors.red[600],
          colorText: Colors.white,
          duration: const Duration(seconds: 4),
        );
      }
      return;
    }

    final recipients = _selectedRecipients.map((item) {
      // Try to parse recipient ID, use 0 for newly added recipients
      Int64 recipientId;
      try {
        recipientId = Int64.parseInt(item.recipient.id);
      } catch (e) {
        // For newly added recipients or invalid IDs, use 0
        recipientId = Int64(0);
      }

      return BatchTransferRecipient(
        recipientId: recipientId,
        amount: Int64((item.amount * 100).round()),
        reference: item.referenceController.text.isNotEmpty ? item.referenceController.text : null,
        category: _categoryController.text.isNotEmpty ? _categoryController.text : null,
      );
    }).toList();

    // Create a map of recipient IDs to names for display in review screen
    final Map<String, String> recipientNames = {};
    for (var item in _selectedRecipients) {
      recipientNames[item.recipient.id] = item.recipient.name;
    }

    // Calculate total amount and number of transfers
    Int64 totalAmount = Int64(0);
    for (var recipient in recipients) {
      totalAmount += recipient.amount;
    }
    final totalTransfers = recipients.length;

    // Get auth state for access token
    final authState = context.read<AuthenticationCubit>().state;
    if (authState is! AuthenticationSuccess) {
      Get.snackbar(
        'Error',
        'Please log in to continue',
        backgroundColor: Colors.red[600],
        colorText: Colors.white,
      );
      return;
    }

    // Use the selected account ID
    final fromAccountId = Int64.parseInt(_selectedAccount!.id);

    // Navigate to review screen
    Get.toNamed(
      AppRoutes.batchTransferReview,
      arguments: {
        'fromAccountId': fromAccountId,
        'recipients': recipients,
        'recipientNames': recipientNames,
        'totalAmount': totalAmount,
        'totalTransfers': totalTransfers,
        'selectedAccountBalance': _selectedAccount!.balance,
        'selectedAccountType': _selectedAccount!.accountType,
        'selectedAccountLast4': _selectedAccount!.accountNumberLast4,
        'category': _categoryController.text.isNotEmpty ? _categoryController.text : null,
        'reference': _batchReferenceController.text.isNotEmpty ? _batchReferenceController.text : null,
      },
    );
  }

