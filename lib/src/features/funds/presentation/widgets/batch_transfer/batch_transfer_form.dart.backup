class _BatchTransferFormWidgetState extends State<BatchTransferFormWidget> {
  final List<BatchRecipientItem> _selectedRecipients = [];
  final TextEditingController _batchReferenceController = TextEditingController();
  final TextEditingController _categoryController = TextEditingController();
  final TextEditingController _bulkAmountController = TextEditingController();
  final TextEditingController _bulkReferenceController = TextEditingController();
  final TextEditingController _totalAmountController = TextEditingController();

  double _totalAmount = 0.0;
  double? _userSetTotalAmount; // Total amount set by user
  bool _isAutoDistributing = false; // Flag to prevent recursive updates
  AccountSummaryModel? _selectedAccount; // Selected account for batch transfer

  @override
  void dispose() {
    for (var item in _selectedRecipients) {
      item.dispose();
    }
    _batchReferenceController.dispose();
    _categoryController.dispose();
    _bulkAmountController.dispose();
    _bulkReferenceController.dispose();
    _totalAmountController.dispose();
    super.dispose();
  }

  void _calculateTotal() {
    if (_isAutoDistributing) return; // Prevent recursive calls

    setState(() {
      _totalAmount = _selectedRecipients.fold(0.0, (sum, item) => sum + item.amount);
    });
  }

  /// Smart distribution: Distributes remaining amount among non-manually-set recipients
  void _distributeAmount() {
    if (_userSetTotalAmount == null || _selectedRecipients.isEmpty || _isAutoDistributing) {
      return;
    }

    _isAutoDistributing = true;

    // Calculate amount already manually allocated
    double manuallyAllocated = 0.0;
    int manualCount = 0;

    for (var item in _selectedRecipients) {
      if (item.isManuallySet) {
        manuallyAllocated += item.amount;
        manualCount++;
      }
    }

    // Calculate remaining amount to distribute
    double remaining = _userSetTotalAmount! - manuallyAllocated;

    // Get recipients that haven't been manually set
    int autoCount = _selectedRecipients.length - manualCount;

    if (autoCount > 0 && remaining > 0) {
      double amountPerRecipient = remaining / autoCount;

      for (var item in _selectedRecipients) {
        if (!item.isManuallySet) {
          item.amountController.text = amountPerRecipient.toStringAsFixed(2);
        }
      }
    }

    _isAutoDistributing = false;
    _calculateTotal();
  }

  /// Check if account number already exists
  bool _isDuplicate(String accountNumber) {
    return _selectedRecipients.any((item) => item.recipient.accountNumber == accountNumber);
  }

  /// Mask account number to show only last 4 digits
  String _maskAccountNumber(String accountNumber) {
    if (accountNumber.length <= 4) return accountNumber;
    return '***${accountNumber.substring(accountNumber.length - 4)}';
  }

  void _showMultipleRecipientSelection() {
    final alreadySelectedIds = _selectedRecipients.map((item) => item.recipient.id).toList();
    final recipientCubit = context.read<RecipientCubit>();
    final authCubit = context.read<AuthenticationCubit>();

    showModalBottomSheet(
      context: context,
      isScrollControlled: true,
      backgroundColor: Colors.transparent,
      builder: (bottomSheetContext) => MultiBlocProvider(
        providers: [
          BlocProvider<RecipientCubit>.value(value: recipientCubit),
          BlocProvider<AuthenticationCubit>.value(value: authCubit),
        ],
        child: MultiSelectRecipientBottomSheet(
          alreadySelectedIds: alreadySelectedIds,
          onRecipientsSelected: (recipients) {
            setState(() {
              int addedCount = 0;
              int duplicateCount = 0;

              for (var recipient in recipients) {
                // Check for duplicate account number
                if (_isDuplicate(recipient.accountNumber)) {
                  duplicateCount++;
                  continue;
                }

                _selectedRecipients.add(BatchRecipientItem(recipient: recipient));
                addedCount++;
              }

              // Show feedback if duplicates were found
              if (duplicateCount > 0) {
                Get.snackbar(
                  'Duplicate Recipients',
                  '$duplicateCount recipient(s) skipped - already added',
                  backgroundColor: Colors.orange[600],
                  colorText: Colors.white,
                  duration: const Duration(seconds: 2),
                );
              }

              // Auto-distribute if total amount is set
              if (_userSetTotalAmount != null && addedCount > 0) {
                _distributeAmount();
              } else {
                _calculateTotal();
              }
            });
          },
        ),
      ),
    );
  }

