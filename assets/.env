# For iOS Simulator / macOS use 127.0.0.1

# Core Gateway (Auth, Accounts) - gRPC: 50070, HTTP: 7878
GRPC_API_HOST=10.0.2.2
GRPC_API_PORT=50070
AUTH_GRPC_HOST=10.0.2.2
AUTH_GRPC_PORT=50070
ACCOUNTS_GRPC_HOST=10.0.2.2
ACCOUNTS_GRPC_PORT=50070

# Commerce Gateway (Payments, Bills, GiftCards, TagPay, Invoices) - gRPC: 50071, HTTP: 8080
