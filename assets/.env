PAYMENT_GRPC_PORT=50071
INVOICE_GRPC_HOST=10.0.2.2
INVOICE_GRPC_PORT=50071
BILLS_GRPC_HOST=10.0.2.2
BILLS_GRPC_PORT=50071
GIFTCARDS_GRPC_HOST=10.0.2.2
GIFTCARDS_GRPC_PORT=50071

